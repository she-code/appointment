<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%=csrfToken%>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" ref="stylesheet" />
    <title>
        <%= title %>
    </title>
    <style>
        body {
            background-color: #6c6c7f24;
        }
    </style>
</head>

<body>
    <main class="h-screen ">
            <div class="sm:container mx-auto p-8 bg-white shadow-lg rounded-md"
                style=" margin-top: 20px; width: 500px;">
                <div class="mx-auto flex  flex-col	">
                    <h6 class="py-3 text-center text-green-600 text-2xl">Sign-Up</h6>
                    <form action="/users/register" method="post"  onsubmit="submit_btn.disabled = true; return true;">
                        <input  type="hidden" name="_csrf" value="<%=csrfToken%>" />
                        <div class="py-3">
                            <label for="firstName">First Name</label>
                            <input  type="text" name="firstName"
                                class="border border-gray-300 text-gray-900 rounded p-2 w-full mt-2" />
                        </div>
                        <div class="py-3">
                            <label for="lastName">Last Name</label>
                            <input  type="text" name="lastName"
                                class="border border-gray-300 text-gray-900 rounded p-2 w-full mt-2" />
                        </div>
                        <div class="py-3">
                            <label for="email">Email</label>
                            <input  type="email" name="email"
                                class="border border-gray-300 text-gray-900 rounded p-2 w-full mt-2" />
                        </div>
                        <div class="py-3">
                            <label for="password">Password</label>
                            <div class="flex items-center relative">
                            <input  type="password" name="password"
                                class="border border-gray-300 text-gray-900 rounded p-2 w-full mt-2" id="password" />
                            <button type="button" class="absolute ml-2  right-2" onclick="viewPassword()">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-green-400	">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </button>
                        </div>
                        </div>
                        <div class="py-3">
                            <button type="submit"
                                class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2 w-full">SIGN
                                UP</button>
                        </div>

                    </form>
                    <p class="py-2">
                        Already have an account?
                        <a href="/login" class="text-green-600 font-bold">Sign-In</a>
                    </p>
                </div>


            </div>
            <div class="mx-auto sm:container m-5 p-3" style="width: 500px;">
                <%-include("errorMsg.ejs")%>
            </div>

    </main>
    <script>
        const password = document.getElementById('password')
       function viewPassword(){
        if(password.type=="text"){
            password.type="password"

        }else{
            password.type='text'
        }
       }
    </script>
</body>

</html>